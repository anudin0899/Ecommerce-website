<section>
    <div class="container mt-4">
        <div class="row">
            <table class="table mt-4">
                <thead class="thead-dark">
                    <tr>

                        <th>Date</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Mobile</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Payment Status</th>
                        <th>Details</th>



                    </tr>
                </thead>
                <tbody>
                  {{#each orders}}
                  
                    <tr>

                        <td>{{this.date}}</td>
                        <td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.city}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.totalAmount}} </td>
                        <td>{{this.paymentMethod}} </td>
                        <td>{{this.status}} </td>

                        <td>
                            <a href="/view-order-product/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>

                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>
<section>
    <div class="container mt-4">
        <div class="row">
            {{#each products}}

            <div class="col-md-3 col-6 p-2">
                <div class="card " style="width: 15rem; height:30rem; ">
                    <img class="card-img-top p-3" style="height:14rem ;" src="/product-image/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.Name }}</h5>
                        <p class="card-text">{{ this.Price }}</p>
                        <p class="card-text">{{ this.Category }}</p>
                        <p class="card-text ">{{ this.Description }}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>


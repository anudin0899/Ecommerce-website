<section>
    <div class="container mt-4">
        <div class="row">
            {{#each orderProducts}}


            <div class="col-md-3 col-6 p-2">
                <div class="card " style="width: 15rem; height:30rem; ">
                    <img class="card-img-top p-3" style="height:14rem ;" src="/product-image/{{this.product._id}}.jpg" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.product.Name }}</h5>
                        <p class="card-text">{{ this.product.Price }}</p>
                        <p class="card-text ">Qty: {{ this.quantity }}</p>
                        <p class="card-text">{{ this.product.Category }}</p>
                        <p class="card-text ">{{ this.product.Description }}</p>
                        
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>
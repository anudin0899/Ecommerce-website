<section>
    <div class="container">
        <div class="row mt-4 mb-3">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
        </div>
        <table class="table mt-5" id="productsTableId">
            <thead class="thead-dark">
                <tr>
                   
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                   
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width: 50px;height:50px; 
                     " src="/product-image/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-outline-primary m-1"> <i
                                class="fas fa-edit"></i> </a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-outline-danger m-1"
                            onclick="return confirm('Are you want to delete {{this.Name}}')"> <i
                                class="fas fa-trash"></i> </a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>


</section>

<script>
    $(document).ready(function () {
        $('#productsTableId').DataTable();
    });

</script>